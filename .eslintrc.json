{
  "extends": "@pwrs",
  "globals": {
    "Stripe": true
  },
  "rules": {
    "no-invalid-this": "off"
  },
  "overrides": [
    {
      "files": ["**/*.test.ts", "test/test-helpers.ts"],
      "rules": {
        "max-len": 0,
        "@typescript-eslint/no-non-null-assertion": 0
      }
    },
    {
      "files": "**/*.ts",
      "rules": { "@typescript-eslint/explicit-module-boundary-types": "off" }
    }
  ]
}
