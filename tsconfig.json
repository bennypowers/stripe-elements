{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "DOM", "ES2018" ],
    "moduleResolution": "node",
    "outDir": ".",
    "sourceMap": true,
    "target": "ES2018"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.js"
  ]
}
